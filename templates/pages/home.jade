section.page.home
    h2 Welcome to Tic-Tac-Toe game written in AmpersandJS

    div.row
        div.col-sm-4
            #left-player
        div#game-board-container.col-sm-4
            div.toolbar
                span.label.label-success(data-hook='show-if-game-is-over') Game Over
                span.pull-right
                    a.btn.btn-link(href='/past-games') Past Games
                    button.btn.btn-small.btn-default(data-hook='new-game')
                        i.fa.fa-refresh
                        = ' '
                        | New Game
            canvas#game-board
        div.col-sm-4
            #right-player


